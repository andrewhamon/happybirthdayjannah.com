@import 'nib/reset'
global-reset()
reset-html5()

html
  height: 100%

body
  height: 100%
  font: 16px Helvetica, Sans-Serif
  font-weight: 300
  text-align: center
  color: white
  &.black
    background-color: black

#bday
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0

h1
  font-size: 4em

.flex-container
  display: flex
  flex-direction: column
  min-height: 100%
  overflow: hidden
  align-items: center
  justify-content: space-around

canvas
  display: block
